<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_empty_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:drawablePadding="@dimen/padding_drawable_error"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingHorizontal="@dimen/padding_default_horizontal"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_error_message"
            app:drawableTopCompat="@drawable/ic_error"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@string/message_empty_delivery_list" />

    </ScrollView>
</layout>